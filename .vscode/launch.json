    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug on Edge",
            "type": "msedge",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:4200/",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
        },
        {
            "name": "Test on Edge",
            "type": "msedge",
            "request": "launch",
            "preLaunchTask": "npm: test",
            "url": "http://localhost:9876/debug.html"
        }
    ]
}